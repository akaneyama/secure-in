<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundbaru"
    tools:context=".menutambahdanedit">



    <LinearLayout
        android:id="@+id/logobackdansave"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.06"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/buttonkembali"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20dp"
            android:fontFamily="@font/opensansbold"
            android:textColor="@color/white"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="20dp"
            android:fontFamily="@font/opensansbold"
            android:textColor="@color/unguteks"/>
        
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/opensanssemibold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/spinnerkategori"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/opensanssemibold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tombolemail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"/>

    <LinearLayout
        android:id="@+id/tombolemail"
        android:layout_marginTop="40dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerkategori"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.06"
        android:orientation="horizontal"
        android:background="@drawable/backgroundlistviewdidashboard"
        android:gravity="center_vertical">

        <ImageView
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/email"/>

        <EditText
            android:layout_margin="5dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:hint="Email"
            android:fontFamily="@font/opensansmedium"
            android:inputType="textEmailAddress"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tombolusername"
        android:layout_marginTop="40dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tombolemail"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.06"
        android:orientation="horizontal"
        android:background="@drawable/backgroundlistviewdidashboard"
        android:gravity="center_vertical">

        <ImageView
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/usernamelog"/>

        <EditText
            android:layout_margin="5dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:hint="Username"
            android:fontFamily="@font/opensansmedium"
            android:inputType="textEmailAddress"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/opensanssemibold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tombolusername"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"/>

    <LinearLayout
        android:id="@+id/tombolpassword"
        android:layout_marginTop="40dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tombolusername"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.06"
        android:orientation="horizontal"
        android:background="@drawable/backgroundlistviewdidashboard"
        android:gravity="center_vertical">

        <ImageView
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/passwordlog"/>

        <EditText
            android:layout_margin="5dp"
            android:background="@null"
            android:layout_width="198dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:fontFamily="@font/opensansmedium"
            android:hint="Password"
            android:inputType="textPassword"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/eyesopen"/>

    </LinearLayout>

    <TextView
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Generate"
        android:layout_marginLeft="5dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.2"
        android:textSize="16dp"
        android:textColor="@color/unguteks"
        android:fontFamily="@font/opensansbold"
        app:layout_constraintTop_toBottomOf="@id/tombolusername"
        app:layout_constraintStart_toEndOf="@id/tombolpassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/opensanssemibold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tombolpassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"/>
    <LinearLayout
        android:id="@+id/tombolnotes"
        android:layout_marginTop="40dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tombolpassword"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.06"
        android:orientation="horizontal"
        android:background="@drawable/backgroundlistviewdidashboard"
        android:gravity="center_vertical">

        <ImageView
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/usernamelog"/>

        <EditText
            android:layout_margin="5dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:hint="Notes"
            android:fontFamily="@font/opensansmedium"
            android:inputType="textEmailAddress"/>

    </LinearLayout>

    <TextView
        android:id="@+id/kategorititle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategori"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/opensanssemibold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/logobackdansave"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"/>

    <Spinner
        android:id="@+id/spinnerkategori"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/kategorititle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.06"
        android:background="@drawable/backgroundlistviewdidashboard"
        android:padding="10dp"
        android:spinnerMode="dropdown"/>

</androidx.constraintlayout.widget.ConstraintLayout>