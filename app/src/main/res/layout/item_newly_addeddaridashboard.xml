<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/backgroundlistviewdidashboard"
    android:elevation="2dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/logoItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logingoogle"
        android:layout_marginEnd="10dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/akunname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="akun google."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:fontFamily="@font/opensansbold" />
        <TextView
            android:id="@+id/emailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@gmail.com"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="@font/opensansbold" />

        <TextView
            android:id="@+id/createdDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created: 2025-04-11"
            android:textSize="12sp"
            android:textColor="#888888"
            android:fontFamily="@font/opensansmediumitalic"/>
    </LinearLayout>

</LinearLayout>
