<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundbaru"
    tools:context=".Dashboard">


    <!--tampilan atas-->
    <LinearLayout
        android:id="@+id/tampilanatas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ucapanselamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Hello, Good Morning"
                android:fontFamily="@font/opensansmediumitalic"
                android:textColor="@color/white"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/namauser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Daffa Aditya Purwanto"
                android:fontFamily="@font/opensansbold"
                android:textColor="@color/white"
                android:textSize="15sp"/>



        </LinearLayout>

        <!-- Spacer kanan biar rata tengah -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30sp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/notification" />
    </LinearLayout>

    <!--content-->
    <!-- Search Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchcard"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tampilanatas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/filtercard">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/ungubuataddon"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/icon_username"
                android:layout_width="17dp"
                android:layout_height="17dp"
                app:srcCompat="@drawable/searchfix" />

            <EditText
                android:id="@+id/searchingtext"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:textSize="13sp"
                android:hint="Search..."
                android:background="@null"
                android:inputType="text" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Filter Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/filtercard"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tampilanatas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchcard"
        app:layout_constraintWidth_percent="0.12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/ungubuataddon"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconfilter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/filter" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/jumlahakuntersimpan"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accountinformation"
        app:layout_constraintEnd_toStartOf="@id/sinkronisasiterakhir"
        app:layout_constraintWidth_percent="0.45">

        <LinearLayout
            android:background="@drawable/ungubuataddon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.6K"
                android:textSize="60sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="-15dp"
                android:id="@+id/angkatotalpassworddashboard"
                android:fontFamily="@font/opensansbold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="number of passwords"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/opensansmediumitalic" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sinkronisasiterakhir"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/accountinformation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/jumlahakuntersimpan"
        app:layout_constraintWidth_percent="0.45">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/ungubuataddon"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/sinkronisasi"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="-15dp"
                app:srcCompat="@drawable/syncicon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Last Sync: "
                    android:textSize="15sp"
                    android:fontFamily="@font/opensansmediumitalic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/opensansmediumitalic" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/accountinformation"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/filtercard">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/information"/>
        <TextView
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:text="Account Information"
            android:fontFamily="@font/opensansbold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>




    <TextView
        android:id="@+id/jumlahakun"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="Newly Added"
        android:fontFamily="@font/opensansbold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jumlahakuntersimpan"/>

    <ListView
        android:id="@+id/listViewNewlyAdded"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:padding="10dp"
        android:clickable="false"
        android:focusable="false"
        android:descendantFocusability="blocksDescendants"
        app:layout_constraintTop_toBottomOf="@id/jumlahakun"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tampilanbawah" />
    <ImageView
        android:id="@+id/buattambahindata"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.15"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.11"
        android:src="@drawable/adddata"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@id/tampilanbawah"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:elevation="10dp"/>

    <!--tampilan bawah-->
    <LinearLayout
        android:id="@+id/tampilanbawah"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.09"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="bottom"
        android:background="@drawable/ungubuataddon"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Home halaman sekarang-->
        <LinearLayout
            android:id="@+id/tombolmenukedashboard_dashboard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/homefix" />

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:gravity="center"
                android:fontFamily="@font/opensanssemibold"
                android:textAlignment="center"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Storage -->

        <LinearLayout
            android:id="@+id/tombolkemenumypassword_dashboard"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/folder"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Password"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/opensanssemibold"
                android:textAlignment="center"/>
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <LinearLayout
            android:id="@+id/tombolmenukebackup_dashboard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/simpan"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Backup"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/opensanssemibold"
                android:textAlignment="center"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:id="@+id/tombolmenukesetting_dashboard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/settingfix"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/opensanssemibold"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Kalender -->

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
