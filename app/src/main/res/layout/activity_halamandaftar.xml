<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundbaru"
    tools:context=".halamandaftar">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="370dp"
        android:layout_height="590dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">




            <Button
                android:id="@+id/btn_login"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="410dp"
                android:backgroundTint="@color/ungubutton"
                android:elevation="10dp"
                android:text="Register"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensansmediumitalic"
                android:text="- Or Register With -" />

            <ImageView
                android:id="@+id/btnlogingoogle"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/logingoogle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:fontFamily="@font/opensansmediumitalic"
                    android:text="Already Have Account?" />

                <TextView
                    android:id="@+id/btnloginkembali"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="@color/ungubutton"
                    android:fontFamily="@font/opensansmediumitalic"
                    android:text=" Login" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <ImageView
        android:id="@+id/imagekit"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/secureinlogo"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="100dp"
        app:layout_constraintEnd_toEndOf="parent"/>



    <!-- Container untuk Username -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:elevation="10dp"
        android:id="@+id/container_username"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imagekit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icon Username -->
        <ImageView
            android:id="@+id/icon_username"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/usernamelog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Input Username -->
        <EditText
            android:id="@+id/et_username"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="Username"
            android:paddingStart="10dp"
            android:background="@null"
            app:layout_constraintStart_toEndOf="@id/icon_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="@android:color/black"
            app:layout_constraintStart_toStartOf="@id/et_username"
            app:layout_constraintEnd_toEndOf="@id/et_username"
            app:layout_constraintTop_toBottomOf="@id/et_username"
            app:layout_constraintWidth_percent="0.8"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Container untuk Password -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:elevation="10dp"
        android:id="@+id/container_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/container_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icon Password -->
        <ImageView
            android:id="@+id/icon_password"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/passwordlog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/passwordStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password strength"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/et_password"
            app:layout_constraintStart_toStartOf="parent" />


        <!-- Input Password -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_password"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/lihatpassword"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/eyesopen"
            android:layout_marginLeft="-20dp"
            app:layout_constraintStart_toEndOf="@id/et_password"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="@android:color/black"
            app:layout_constraintStart_toStartOf="@id/et_password"
            app:layout_constraintEnd_toEndOf="@id/et_password"
            app:layout_constraintTop_toBottomOf="@id/et_password"
            app:layout_constraintWidth_percent="0.8"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:elevation="10dp"
        android:id="@+id/container_passwordretype"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/container_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icon Password -->
        <ImageView
            android:id="@+id/icon_passwordretype"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/passwordlog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Input Password -->
        <EditText
            android:id="@+id/et_passwordretype"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="Retype Password"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_passwordretype"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/lihatpasswordretype"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/eyesopen"
            android:layout_marginLeft="-20dp"
            app:layout_constraintStart_toEndOf="@id/et_passwordretype"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/viewbuatconstraint"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="@android:color/black"
            app:layout_constraintStart_toStartOf="@id/et_passwordretype"
            app:layout_constraintEnd_toEndOf="@id/et_passwordretype"
            app:layout_constraintTop_toBottomOf="@id/et_passwordretype"
            app:layout_constraintWidth_percent="0.8"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/passwordMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/container_passwordretype"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:elevation="10dp"
        android:id="@+id/container_email"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/container_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icon Password -->
        <ImageView
            android:id="@+id/iconemail"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Input Password -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconemail"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="@android:color/black"
            app:layout_constraintStart_toStartOf="@id/et_email"
            app:layout_constraintEnd_toEndOf="@id/et_email"
            app:layout_constraintTop_toBottomOf="@id/et_email"
            app:layout_constraintWidth_percent="0.8"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>